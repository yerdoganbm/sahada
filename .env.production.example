# ==============================================
# Production Environment Variables
# ==============================================

# MongoDB Atlas (Production Database)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sahada?retryWrites=true&w=majority
DB_NAME=sahada

# API Server
PORT=3001
NODE_ENV=production
API_URL=https://api.yourdomain.com

# Frontend
VITE_API_BASE_URL=https://api.yourdomain.com/api
VITE_APP_TITLE=Sahada - HalÄ± Saha Otomasyonu
VITE_SITE_URL=https://yourdomain.com

# Authentication & Security
JWT_SECRET=your-very-secure-jwt-secret-key-here-min-32-characters
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# WhatsApp Business API
WHATSAPP_API_KEY=your-whatsapp-business-api-key
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-verify-token
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id

# Gemini AI API
GEMINI_API_KEY=your-gemini-api-key-here

# Mapbox (Maps)
MAPBOX_TOKEN=your-mapbox-token

# Email Service (SendGrid or AWS SES)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Sahada App

# Payment Gateway (Iyzico for Turkey)
IYZICO_API_KEY=your-iyzico-api-key
IYZICO_SECRET_KEY=your-iyzico-secret-key
IYZICO_BASE_URL=https://api.iyzipay.com

# Cloud Storage (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=sahada-uploads
AWS_REGION=eu-central-1
AWS_S3_URL=https://sahada-uploads.s3.eu-central-1.amazonaws.com

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.2

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Redis (Cache & Sessions - Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/sahada/app.log

# Webhooks
WEBHOOK_SECRET=your-webhook-secret-for-verifying-external-calls

# Feature Flags
ENABLE_WHATSAPP=true
ENABLE_PAYMENTS=true
ENABLE_AI_FEATURES=true
ENABLE_SCOUT_SYSTEM=true

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We're currently performing maintenance. Please check back soon.

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
