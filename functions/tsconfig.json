{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib",
    "rootDir": ".."
  },
  "include": [
    "src/**/*.ts",
    "../mobile/src/domain/**/*.ts"
  ],
  "exclude": ["node_modules", "lib"]
}

