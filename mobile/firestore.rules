rules_version = '2';
// Firebase Console > Firestore Database > Rules kismina bu kurallari yapistirin.
// Geli≈ütirme: read, write true. Production'da auth ile kisitlayin.

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if true;
    }
    match /teams/{teamId} {
      allow read, write: if true;
    }
    match /matches/{matchId} {
      allow read, write: if true;
    }
    match /venues/{venueId} {
      allow read, write: if true;
    }
  }
}
